<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Board List</title>
  <!-- CSS -->
  <%- include(`${ejsRoot}/inc/stylesheets`); %>
</head>

<body>

  <header>
    <%- include(`${ejsRoot}/inc/board-navigation`); %>
  </header>

  <main role="main">

    <%- include(`${ejsRoot}/inc/jumbotron`); %>

    <div class="container">

      <div class="row mb-3 text-center">
        <h1><%= rows.title %></h1>
      </div>

      <form action="<%= baseUrl %>/board/update/<%= rows.bid %>" method="post">

        <table class="table">
          <tbody>
            <tr>
              <th scope="row">번호</th>
              <th><%= rows.bid %></th>
              <td>아이디</td>
              <td><%= rows.uid %></td>
            </tr>
            <tr>
              <th scope="row">수정</th>
              <td><%= rows.modTime %></td>
              <td>조회</td>
              <td><%= rows.viewCount %></td>
            </tr>
            <tr>
              <th scope="row">이름</th>
              <td colspan="3"><%= rows.uname %></td>
            </tr>
            <tr>
              <th scope="row">제목</th>
              <td colspan="3">

                <div class="form-group">
                  <label class="sr-only" for="title">제목</label>
                  <input class="form-control" type="text" id="title" name="title" value="<%= rows.title %>"
                    placeholder="제목">
                </div>

              </td>
            </tr>
            <tr>
              <th scope="row">본문</th>
              <td colspan="3">
                <div class="form-group">
                  <label class="sr-only" for="content">본문</label>
                  <textarea class="form-control" id="content" name="content" rows="10"><%= rows.content %></textarea>
                </div>
              </td>
            </tr>
            <tr>
              <th scope="row">답글</th>
              <td colspan="3"><%= rows.replyCount %></td>
            </tr>
          </tbody>
        </table>

        <div class="rows">

          <div class="btn-group float-left" role="group">
            <button class="btn btn-outline-secondary" type="button"
              onclick="window.location.href='<%= baseUrl %>/board/list/1'">목록</button>
            <button class="btn btn-outline-secondary" type="button" onclick="window.history.back(-1)">이전</button>
          </div>

          <div class="btn-group float-right" role="group">
            <button class="btn btn-outline-primary" type="reset">취소</button>
            <button class="btn btn-outline-primary" type="submit">저장</button>
          </div>
        </div>

      </form>

    </div>

  </main><!-- /.container -->

  <footer class="footer">
    <%- include(`${ejsRoot}/inc/copyright`); %>
  </footer>

  <!-- SCRIPT -->
  <%- include(`${ejsRoot}/inc/scripts`); %>
</body>

</html>