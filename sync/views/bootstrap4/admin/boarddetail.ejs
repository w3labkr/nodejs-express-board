<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Board List</title>
  <!-- CSS -->
  <%- include(`${ejsRoot}/inc/stylesheets`); %>

  <% current = 'board' %>
</head>

<body>

  <header>
    <%- include(`${ejsRoot}/inc/admin-navigation`); %>
  </header>

  <main class="main" role="main">

    <%- include(`${ejsRoot}/inc/jumbotron`); %>

    <div class="container">

      <div class="row mb-3">
        <div class="col-12 text-center">
          <h1><%= rows.title %></h1>
        </div>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <th scope="row" width="100">번호</th>
            <th><%= rows.bid %></th>
            <td width="100">아이디</td>
            <td width="100"><%= rows.uid %></td>
          </tr>
          <tr>
            <th scope="row">수정</th>
            <td><%= rows.modTime %></td>
            <td>조회</td>
            <td><%= rows.viewCount %></td>
          </tr>
          <tr>
            <th scope="row">이름</th>
            <td colspan="3"><%= rows.uname %></td>
          </tr>
          <tr>
            <th scope="row">제목</th>
            <td colspan="3"><%= rows.title %></td>
          </tr>
          <tr>
            <th scope="row">본문</th>
            <td colspan="3"><%= rows.content %></td>
          </tr>
          <tr>
            <th scope="row">답글</th>
            <td colspan="3"><%= rows.replyCount %></td>
          </tr>
        </tbody>
      </table>

      <div class="rows">

        <div class="btn-group float-left" role="group">
          <button class="btn btn-outline-secondary" type="button"
            onclick="window.location.href='<%= baseUrl %>/admin/boardlist/1'">목록</button>
          <button class="btn btn-outline-secondary" type="button" onclick="window.history.back(-1)">이전</button>
        </div>

        <div class="btn-group float-right" role="group">
          <button id="deletePost" class="btn btn-outline-primary" type="button" onclick="deleteAfterAlert()">삭제</button>
        </div>

      </div>

    </div>

  </main><!-- /.container -->

  <footer class="footer">
    <%- include(`${ejsRoot}/inc/copyright`); %>
  </footer>

  <!-- SCRIPT -->
  <%- include(`${ejsRoot}/inc/scripts`); %>
  <script>
    function deleteAfterAlert() {
      const isDelete = confirm('정말 삭제 하시겠습니까?');
      if (isDelete) {
        window.location.href = '<%= baseUrl %>/admin/boarddelete/<%= rows.bid %>'
      }
    }
  </script>
</body>

</html>